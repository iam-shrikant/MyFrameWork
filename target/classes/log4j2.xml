        <!-- <RollingFile name="DebuggerLogger" fileName="D:/temp/logs/xyz.log" filePattern="${log-path}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">-->
    <RollingFile name="DebuggerLogger" fileName="${log-path}AutomationRun.${date:yyyy-MM-dd}.log" filePattern="${log-path}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
       <PatternLayout>
           <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
       </PatternLayout>
       <Policies>
           <TimeBasedTriggeringPolicy />
           <SizeBasedTriggeringPolicy size="10 MB" />
       </Policies>
   </RollingFile>

</Appenders>
